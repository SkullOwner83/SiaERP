<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="StyleButtonBase" TargetType="{x:Type Control}">
        <Setter Property="Background" Value="{StaticResource ClrBkg_Primary}"/>
        <Setter Property="Foreground" Value="{StaticResource ClrFnt_Secondary}"/>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource ClrBkg_PrimaryOver}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>