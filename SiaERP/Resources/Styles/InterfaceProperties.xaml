<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:theme="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2">
    
    <!-- Colors -->
    <SolidColorBrush x:Key="ClrBkg_Primary">#303C44</SolidColorBrush>
    <SolidColorBrush x:Key="ClrBkg_PrimaryOver">#566166</SolidColorBrush>
    <SolidColorBrush x:Key="ClrBkg_Secondary">#F0F0F0</SolidColorBrush>
    
    <SolidColorBrush x:Key="ClrSecondary">#363852</SolidColorBrush>

    <SolidColorBrush x:Key="ClrBorder">Gray</SolidColorBrush>
    <SolidColorBrush x:Key="ClrBorderOver">#303C44</SolidColorBrush>

    <!-- Font colors -->
    <SolidColorBrush x:Key="ClrFnt_Prymary">#000000</SolidColorBrush>
    <SolidColorBrush x:Key="ClrFnt_Secondary">#FFFFFF</SolidColorBrush>

    <FontFamily x:Key="FntPrimary">Arial</FontFamily>
    <System:Double x:Key="FntSize">16</System:Double>
    <Thickness x:Key="BdrSize">2</Thickness>
    <Thickness x:Key="ControlTextMargin">4</Thickness>
</ResourceDictionary>