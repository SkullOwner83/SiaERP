<UserControl x:Class="SiaERP.Views.CustomersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SiaERP.Views"
             xmlns:Behaviors="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:Utilities="clr-namespace:SiaERP.Resources.Utilities"
             xmlns:ViewModel="clr-namespace:SiaERP.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="640" d:DesignWidth="840">

    <!-- Binding view model -->
    <Control.DataContext>
        <ViewModel:CustomerViewModel/>
    </Control.DataContext>

    <UserControl.Resources>
        <Utilities:BooleanInverse x:Key="BooleanInverse"/>
        <Utilities:IntToBoolean x:Key="IntToBoolean"/>
    </UserControl.Resources>             
    
    <Border Background="GhostWhite">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="0 12">
                <TextBlock Text="Periodo: "  Style="{StaticResource StyleLabel}"/>
                <ComboBox Width="200"/>
            </StackPanel>

            <StackPanel Grid.Row="0" Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                
                <TextBlock Text="Buscar: " Style="{StaticResource StyleLabel}"/>
                <TextBox Text="{Binding Filter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="200"
                         IsReadOnly="{Binding EnableEdition}"
                         Style="{StaticResource StyleTextBox}">
                    <Behaviors:Interaction.Triggers>
                        <Behaviors:EventTrigger EventName="TextChanged">
                            <Behaviors:InvokeCommandAction Command="{Binding CmdFilter}"/>
                        </Behaviors:EventTrigger>
                    </Behaviors:Interaction.Triggers>
                </TextBox>
            </StackPanel>

            <!-- Customers data grid -->
            <DataGrid x:Name="DGCustomers"
                      Grid.Row="1" Grid.ColumnSpan="2"
                      ItemsSource="{Binding ListCustomers}"
                      Style="{StaticResource StyleDataGrid}"
                      SelectedItem="{Binding SelectedCustomer}">

                <DataGrid.Columns>
                    <!-- Customer type column -->
                    <DataGridTemplateColumn CanUserReorder="False"
                                            CanUserResize="False"
                                            CanUserSort="False"
                                            Width="26">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="/Resources/Images/CustomerType.png"
                                       Stretch="Uniform"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Customer number column -->
                    <DataGridTextColumn Header="Cliente"
                                        Width="80"
                                        Binding="{Binding Id}"/>

                    <!-- Customer name column -->
                    <DataGridTextColumn Header="Nombre"
                                        Binding="{Binding Name}"
                                        Width="300"/>

                    <!-- Customer number phone column -->
                    <DataGridTextColumn Header="Telefono"
                                        Binding="{Binding PhoneNumber}"
                                        Width="150"/>

                    <!-- Customer register date column -->
                    <DataGridTextColumn Header="Fecha"
                                        Binding="{Binding RegisterDate, StringFormat=\{0:dd/MM/yyyy\}}"
                                        Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Panel of CRUD Buttons -->
            <StackPanel Grid.Row="2" Grid.ColumnSpan="2"
                        Orientation="Horizontal">
                
                <Button Width="100" Height="32" 
                        Content="Nuevo"
                        Margin="0 10 10 10"
                        Style="{StaticResource StyleButtonMenu}"
                        Command="{Binding CmdNew}"/>

                <Button Width="100" Height="32" 
                        Content="Modificar"
                        Margin="0 10 10 10"
                        Style="{StaticResource StyleButtonMenu}"
                        Command="{Binding CmdModify}"/>

                <Button Width="100" Height="32" 
                        Content="Eliminar"
                        Margin="0 10 10 10"
                        Style="{StaticResource StyleButtonMenu}"
                        Command="{Binding CmdDelete}"
                        />

                <Button Width="100" Height="32" 
                        Content="Imprimir"
                        Margin="0 10 10 10"
                        Style="{StaticResource StyleButtonMenu}"
                        Command="{Binding CmdPrint}"/>
                <TextBlock Text="{Binding AuxiliarCustomer.Name}"/>
            </StackPanel>


            <!-- Customer data form -->
            <StackPanel Grid.Column="2" Grid.Row="1"
                        Margin="24 0">
                <StackPanel Orientation="Horizontal">
                    <RadioButton Content="Individuo" Margin="0 0 50 0"
                                 IsChecked="{Binding AuxiliarCustomer.Type, Converter={StaticResource IntToBoolean}, ConverterParameter=1, Mode=TwoWay}"
                                 IsEnabled="{Binding EnableEdition}"/>
                    <RadioButton Content="Empresa"
                                 IsChecked="{Binding AuxiliarCustomer.Type, Converter={StaticResource IntToBoolean}, ConverterParameter=2, Mode=TwoWay}"
                                 IsEnabled="{Binding EnableEdition}"/>
                </StackPanel>

                <TextBlock Text="Fecha de registro:"/>
                <TextBox Text="{Binding AuxiliarCustomer.RegisterDate, StringFormat=\{0:dd/MM/yyyy\}, Mode=TwoWay}" 
                         IsReadOnly="{Binding EnableEdition, Converter={StaticResource BooleanInverse}}"
                         Style="{StaticResource StyleTextBox}"/>

                <TextBlock Text="Nombre:"/>
                <TextBox Text="{Binding AuxiliarCustomer.Name, Mode=TwoWay}" 
                         IsReadOnly="{Binding EnableEdition, Converter={StaticResource BooleanInverse}}"
                         Style="{StaticResource StyleTextBox}"/>

                <TextBlock Text="Numero de telefono:"/>
                <TextBox Text="{Binding AuxiliarCustomer.PhoneNumber, Mode=TwoWay}" 
                         IsReadOnly="{Binding EnableEdition, Converter={StaticResource BooleanInverse}}"
                         Style="{StaticResource StyleTextBox}"/>

                <TextBlock Text="Correo electronico:"/>
                <TextBox Text="{Binding AuxiliarCustomer.Email, Mode=TwoWay}" 
                         IsReadOnly="{Binding EnableEdition, Converter={StaticResource BooleanInverse}}"
                         Style="{StaticResource StyleTextBox}"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Grid.Column="3"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        FlowDirection="RightToLeft">
                <Button Width="100" Height="32" 
                        Content="Cancelar"
                        Margin="0 10 10 10"
                        Style="{StaticResource StyleButtonMenu}"
                        Command="{Binding CmdCancel}"/>

                <Button Width="100" Height="32" 
                        Content="Aceptar"
                        Margin="0 10 10 10"
                        Style="{StaticResource StyleButtonMenu}"
                        Command="{Binding CmdAcept}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
